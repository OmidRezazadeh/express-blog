<form
    id="loginForm"
    class="form-signin"
    action="/users/forget-password"
    method="POST"
>
    <h1 class="h3 mb-3 font-weight-normal">فراموشی رمز عبور</h1>
    <%- include("./includes/loginMessage.ejs") %>
    <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
    <input
        type="email"
        name="email"
        id="inputEmail"
        class="form-control mb-2"
        placeholder="آدرس ایمیل"
        required
        autofocus
    />
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        ریست پسورد
    </button>
</form>
